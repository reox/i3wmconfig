# enable specific modes for some windows
for_window [instance="^(keepassx|arandr|wicd-client.py|pavucontrol)$"] floating enable
for_window [instance="^arandr"] resize set 640 480
for_window [title="^alsamixer$"] floating enable
for_window [instance="^quickfloaterm$"] floating enable, move position center
for_window [class="^net-minecraft.*$"] floating enable
for_window [class="^Minecraft.*$"] floating enable
for_window [class="^PTBatcherGUI$"] floating enable

for_window [class="^com-mathworks-util-PostVMInit$" title="^Figure.*$"] floating enable
for_window [class="^com-mathworks-activationclient-ActivationApplication$"] floating enable
for_window [class="^Pcmanfm$"] floating enable
for_window [class="^Thunar$"] floating enable
for_window [class="^Freecad.*$" title="^Formula editor$"] floating enable

for_window [class="org.jabref.JabRefMain" instance="org.jabref.JabRefMain" title="^(?!JabRef$)"] floating enable

for_window [instance="^sun-awt-X11-.*$" title="^Bürgerkarte$"] floating enable, sticky enable

for_window [class="Xsane" instance="xsane"] floating enable


# gimp: from https://bbs.archlinux.org/viewtopic.php?pid=1037908#p1037908
assign [class="Gimp"] gimp
assign [title="GIMP Startup"] gimp
# FIXME this creates huge problems!
# for_window [window_role="gimp-toolbox"] floating disable, layout stacking, move left, resize shrink right 31px or 31 ppt
assign [class="^Darktable$"] darktable
assign [class="^Psi\+$"] 4

assign [class="^conky$"] floating enable, sticky enable


for_window [class="at-gv-egiz-bku-webstart-Launcher" instance="at-gv-egiz-bku-webstart-Launcher" title="Bürgerkarte"] floating enable, sticky enable


for_window [class="Blueman-manager" instance="blueman-manager"] floating enable


for_window [class="rdesktop" instance="rdesktop" title="Lisa"] floating enable

for_window [class="mpv" instance="gl"] floating enable
